<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CardView with Lottie Animation and Developer Info -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

        <!-- FrameLayout to Overlay TextView on Lottie Animation -->
        <FrameLayout
            android:background="#228B22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Lottie Animation View aligned to left -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottiAnimationView"
                android:layout_width="141dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/king2" />

            <!-- Developer Information TextView Over the Lottie Animation -->

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/devInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Developer\nMizanur Rahman Bishal\nEmail: ariyan@example.com\nGitHub: github.com/ariyan.487\nHelping by Mim Akther"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:padding="10dp"
                android:background="@drawable/btn_orange"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginTop="145dp"
                android:layout_gravity="right" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
